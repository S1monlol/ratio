---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<header class="text-white text-lg">
    <a href="/">
        <div class="flex justify-center my-10">
            <img
                class="h-28 rounded-md shadow-md shadow-zinc-500"
                src="/assets/blog.webp"
                alt="Tiny Rocket Blog"
            />
        </div>
        <p class="text-center text-3xl mt-6 mb-3 font-extrabold font-mono">
            {title}
        </p>
    </a>
</header>
